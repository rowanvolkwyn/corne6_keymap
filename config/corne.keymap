#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/keys.h>

/ {
    keymap {
        compatible = "zmk,keymap";

        default_layer {
            // -----------------------------------------------------------------------------------------
            // |  TAB |  Q  |  W  |  E  |  R  |  T  |   |  Y  |  U   |  I  |  O  |  P  | BKSP |
            // | CTRL |  A  |  S  |  D  |  F  |  G  |   |  H  |  J   |  K  |  L  |  ;  |  '   |
            // | SHFT |  Z  |  X  |  C  |  V  |  B  |   |  N  |  M   |  ,  |  .  |  /  | ESC  |
            //                    | GUI | LWR | SPC |   | ENT | RSE  | ALT |

            display-name = "Base";
            bindings = <
&kp TAB    &kp Q           &kp W           &kp F               &kp P             &kp B        &kp J    &kp L              &kp U                &kp Y            &kp SEMICOLON    &kp BSPC
&kp LCTRL  &mt LEFT_GUI A  &mt LEFT_ALT R  &mt LEFT_CONTROL S  &mt LEFT_SHIFT T  &kp G        &kp M    &mt RIGHT_SHIFT N  &mt RIGHT_CONTROL E  &mt RIGHT_ALT I  &mt RIGHT_GUI O  &kp SQT
&kp LSHFT  &kp Z           &kp X           &kp C               &kp D             &kp V        &kp K    &kp H              &kp COMMA            &kp DOT          &kp FSLH         &kp ESC
                                           &kp LGUI            &mo 1             &kp SPACE    &kp RET  &mo 2              &kp RALT
            >;
        };

        lower_layer {
            // -----------------------------------------------------------------------------------------
            // |  TAB |  1  |  2  |  3  |  4  |  5  |   |  6  |  7  |  8  |  9  |  0  | BKSP |
            // | BTCLR| BT1 | BT2 | BT3 | BT4 | BT5 |   | LFT | DWN |  UP | RGT |     |      |
            // | SHFT |     |     |     |     |     |   |     |     |     |     |     |      |
            //                    | GUI |     | SPC |   | ENT |     | ALT |

            display-name = "Lower";
            bindings = <
&kp TAB     &kp N1        &kp N2        &kp N3        &kp N4        &kp N5          &kp MINUS  &kp N7        &kp N8        &kp N9        &kp KP_DIVIDE    &kp BSPC
&bt BT_CLR  &bt BT_SEL 0  &bt BT_SEL 1  &bt BT_SEL 2  &bt BT_SEL 3  &bt BT_SEL 4    &kp PLUS   &kp NUMBER_4  &kp N5        &kp NUMBER_6  &kp KP_MULTIPLY  &kp ENTER
&kp LSHFT   &trans        &trans        &trans        &trans        &trans          &kp N0     &kp NUMBER_1  &kp NUMBER_2  &kp NUMBER_3  &kp RET          &kp ENTER
                                        &kp LGUI      &trans        &kp SPACE       &kp RET    &trans        &kp N0
            >;
        };

        raise_layer {
            // -----------------------------------------------------------------------------------------
            // |  TAB |  !  |  @  |  #  |  $  |  %  |   |  ^  |  &  |  *  |  (  |  )  | BKSP |
            // | CTRL |     |     |     |     |     |   |  -  |  =  |  [  |  ]  |  \  |  `   |
            // | SHFT |     |     |     |     |     |   |  _  |  +  |  {  |  }  | "|" |  ~   |
            //                    | GUI |     | SPC |   | ENT |     | ALT |

            display-name = "Raise";
            bindings = <
&kp EXCL   &kp AT_SIGN  &kp HASH  &kp UP_ARROW    &kp DLLR   &kp PRCNT         &kp CARET  &kp AMPS        &kp LBKT              &kp RBKT               &kp RPAR  &kp BSPC
&kp LCTRL  &trans       &kp LEFT  &kp DOWN_ARROW  &kp RIGHT  &trans            &kp MINUS  &kp BACKSPACE   &kp LEFT_PARENTHESIS  &kp RIGHT_PARENTHESIS  &kp BSLH  &kp GRAVE
&kp LSHFT  &kp Z        &kp X     &kp C           &trans     &kp V             &kp UNDER  &kp UNDERSCORE  &kp LBRC              &kp RBRC               &kp PIPE  &kp TILDE
                                  &kp LGUI        &trans     &kp UNDERSCORE    &kp RET    &trans          &kp RALT
            >;
        };

        extra_1 { status = "reserved"; };

        extra_2 { status = "reserved"; };

        extra_3 { status = "reserved"; };
    };
};
